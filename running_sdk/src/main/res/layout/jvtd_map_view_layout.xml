<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.amap.api.maps.TextureMapView
        android:id="@+id/amap_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/jvtd_map_compass"
        android:src="@drawable/icon_map_compass"
        android:layout_marginStart="@dimen/jvtd_dp_16"
        android:layout_marginTop="@dimen/jvtd_dp_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />
    <com.jvtd.running_sdk.location.widget.JvtdMapScaleView
        android:id="@+id/jvtd_map_scale_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/jvtd_dp_16"
        android:layout_below="@+id/jvtd_map_compass"
        android:layout_marginTop="@dimen/jvtd_dp_16"/>
</RelativeLayout>