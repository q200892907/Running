<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/icon_loading_dialog_background"
    android:orientation="horizontal">

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/load_dialog_spin_kit"
        style="@style/SpinKitView.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/jvtd_loading_dialog_spin_kit_color" />

    <TextView
        android:id="@+id/load_dialog_tip_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/jvtd_loading_dialog_margin"
        android:text="@string/app_name"
        android:visibility="gone"/>
</LinearLayout>